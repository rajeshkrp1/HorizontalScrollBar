<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>



    <style name="Profile_theme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowTranslucentNavigation">false</item>
        <item name="android:colorPrimaryDark">@color/colorPrimary</item>
        <item name="android:statusBarColor">@color/colorPrimary</item>
        <item name="android:colorAccent">@color/colorAccent</item>
        <item name="android:textCursorDrawable">@color/c_divider</item>
        <item name="colorControlNormal">@color/c_divider</item>
        <item name="colorControlActivated">@color/colorAccent</item>
        <item name="android:itemBackground">@color/c_white</item>
        <item name="android:textColorPrimary">@color/c_he_verification</item>
        <item name="android:textColor">@color/c_he_verification</item>
        <!--<item name="android:popupBackground">@drawable/btn_fb</item>-->
        <item name="android:actionMenuTextColor">@color/c_he_verification</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">false</item>
       <!--
        <item name="android:windowFullscreen">true</item>
        <item name="android:fitsSystemWindows">true</item>-->
        <item name="android:windowFullscreen">false</item>
        <item name="android:fitsSystemWindows">false</item>
    </style>


</resources>
