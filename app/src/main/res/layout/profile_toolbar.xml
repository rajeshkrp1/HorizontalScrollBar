<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:elevation="@dimen/_30sdp"
    android:gravity="center_vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <FrameLayout
        android:id="@+id/fl_profile_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/transparent"
        android:visibility="invisible">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/tb_profile_1"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:layout_gravity="center"
            android:background="@android:color/transparent"
            android:clipToPadding="false"
            android:gravity="center"
            android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
            app:contentInsetStart="0dp">

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:gravity="center_vertical"
                >

                <ImageView
                    android:id="@+id/iv_back_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"

                    android:padding="@dimen/_10sdp"
                    android:src="@drawable/ic_back_green"
                    android:tint="@color/green_blue"
                    android:visibility="invisible" />

                <TextView
                    android:id="@+id/toolbar_title_1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_gravity="center"
                    android:layout_toStartOf="@id/iv_search_1"
                    android:layout_toEndOf="@+id/iv_back_1"
                    android:gravity="center_vertical"
                    android:maxLines="1"
                    android:singleLine="true"
                    android:text=""
                    android:textColor="@color/c_black"
                    android:textSize="@dimen/_18ssp"
                    android:visibility="invisible" />

                <TextView
                    android:id="@+id/iv_search_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"

                    android:padding="@dimen/_12sdp"
                    android:text="@string/edit"
                    android:textColor="@color/green_blue"
                    android:textSize="@dimen/_14ssp"
                    android:visibility="invisible" />

                <!--android:foreground="?attr/selectableItemBackground"-->

            </RelativeLayout>

        </androidx.appcompat.widget.Toolbar>

    </FrameLayout>


    <FrameLayout
        android:id="@+id/fl_profile"
        android:paddingBottom="@dimen/_2sdp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/tb_profile"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:layout_gravity="center"
            android:background="@android:color/transparent"
            android:clipToPadding="false"
            android:gravity="center"
            android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
            app:contentInsetStart="0dp">

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:gravity="center_vertical">

                <ImageView
                    android:id="@+id/iv_back"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:padding="@dimen/_10sdp"
                    android:src="@drawable/ic_back_green"
                    android:tint="@color/colorWhite" />

                <ImageView
                    android:id="@+id/iv_back_new"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:padding="@dimen/_10sdp"
                    android:src="@drawable/ic_back_green"
                    android:visibility="gone" />

                <ImageView
                    android:id="@+id/iv_account_type_header"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toEndOf="@id/iv_back"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/toolbar_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_centerHorizontal="true"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="@dimen/_10sdp"
                    android:layout_marginEnd="@dimen/_10sdp"
                    android:layout_toLeftOf="@id/iv_search"
                    android:layout_toRightOf="@+id/iv_account_type_header"
                    android:gravity="center_vertical"
                    android:maxLines="1"
                    android:singleLine="true"
                    android:textColor="@color/c_black"
                    android:textSize="@dimen/_18ssp" />

                <TextView
                    android:id="@+id/iv_search"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:padding="@dimen/_12sdp"
                    android:text="@string/edit"
                    android:textColor="@color/c_white"
                    android:textSize="@dimen/_14ssp" />
            </RelativeLayout>

        </androidx.appcompat.widget.Toolbar>
    </FrameLayout>


</RelativeLayout>